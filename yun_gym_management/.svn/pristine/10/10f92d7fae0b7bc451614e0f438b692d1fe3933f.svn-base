<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.yun.mapper.ThemeMapper">
	
	<!-- 查询主题 -->
	<select id="getTheme" resultType="string">
		select theme from theme where gym_addr = #{value}
	</select>
	
	<!-- 添加门店主题 -->
	<insert id="saveTheme">
		insert into theme (gym_addr,theme) values (#{gymAddr},#{theme})
	</insert>
	
	<!-- 查询是否已添加过主题 -->
	<select id="getThemeInfo" resultType="string">
		select theme from theme where gym_addr = #{value}
	</select>
	
	<!-- 修改主题 -->
	<update id="updateTheme">
		update theme set theme = #{theme} where gym_addr = #{gymAddr}
	</update>

</mapper>