<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.alibaba.dao.PushStatusMapper">

	<!-- 添加文件设备信息 -->
	<insert id="savePushStatus" parameterType="com.alibaba.pojo.PushStatus">
		insert into
		push_status (
		folder_id,
		device_id
		) values (
		#{folder_id},
		#{device_id}
		)
	</insert>

	<!-- 如果终端机修改了，先删除之前某个文件夹的id -->
	<delete id="deletePushStatus" parameterType="com.alibaba.pojo.PushStatus">
		delete from
		push_status where folder_id = #{folder_id}
	</delete>

	<!-- 修改终端机状态 -->
	<update id="updatePushStatus" parameterType="com.alibaba.pojo.PushStatus">
		update push_status
		set
		status = 1
		where folder_id = #{folder_id}
		and device_id =
		#{device_id}
	</update>


	<!-- void updatePushStatusByFolerid(@Param("folerid")String folerid); //修改pushStaus 
		表的数据 -->
	<update id="updatePushStatusByFolerid">
		UPDATE
		`push_status`
		SET
		`is_delete` = 0
		WHERE `folder_id` = #{folerid}
	</update>



</mapper>