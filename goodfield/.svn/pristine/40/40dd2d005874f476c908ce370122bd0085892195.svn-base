package com.alibaba.common.listener;

import javax.servlet.ServletContextEvent;
import javax.servlet.ServletContextListener;
import javax.servlet.annotation.WebListener;

/**
 * Application Lifecycle Listener implementation class InitDataServletContextListener
 *
 */
@WebListener
public class InitDataServletContextListener implements ServletContextListener {

	
	public void contextDestroyed(ServletContextEvent arg0) {
		System.out.println("---contextDestroyed---");
	}

	public void contextInitialized(ServletContextEvent event) {
		System.out.println("---contextInitialized---");
		String path=event.getServletContext().getRealPath("/");
		System.out.println("path:" + path);
		
		
		for (int i = 0; i < 10000; i++) {
		
			System.err.print("log4j.path"+path);
		}
		
		// 吧当前项目的路径配置到System系统类
		System.setProperty("log4j.path", path);
	}

}